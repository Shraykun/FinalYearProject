<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/nav_bot"
        app:layout_constraintEnd_toEndOf="@+id/list_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/nav_bot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/nav_bot"
        android:layout_width="410dp"
        android:layout_height="67dp"
        android:background="@android:color/background_dark"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnCameraView"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginRight="30dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_camera" />

        <ImageButton
            android:id="@+id/btnMapView"
            android:layout_width="100dp"
            android:layout_height="67dp"
            android:layout_marginLeft="30dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_mapmode" />

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>